@model GestioneMagazzino.Models.ModelUtenteList

@{
    ViewBag.Title = "Modificaisadmin";
}

<h2>Modifica tipologia utente</h2>

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Idutente, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Idutente, new { htmlAttributes = new { @class = "form-control", placeholder = "Id utente da cambiare" } })
            @Html.ValidationMessageFor(model => model.Idutente, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IsAdmin, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.IsAdmin, new { htmlAttributes = new { @class = "form-control", placeholder = "Numero tipologia" } })
            @Html.ValidationMessageFor(model => model.IsAdmin, "", new { @class = "text-danger" })
        </div>
    </div>
    <h6>0 = Admin</h6>
    <h6>1 = Addetto alle vendite</h6>
    <h6>2 = Addetto alle forniture</h6>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Modifica tipologia" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Torna al menù principale", "AdminIndex")
</div>
