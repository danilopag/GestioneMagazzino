@model GestioneMagazzino.Models.ModelFattureAcquisto
@{
    ViewBag.Title = "Aggiungifatturaacquisto";
}

<h2>Aggiungi Prodotto a Fattura</h2>

@if(Convert.ToBoolean(Session["Aggiungifattura"]) == true)
{
    <p> Prodotto inserito correttamente nella fattura</p>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.CodProdotto, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CodProdotto, new { htmlAttributes = new { @class = "form-control", placeholder = "Codice Prodotto" } })
            @Html.ValidationMessageFor(model => model.CodProdotto, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Quantita, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Quantita, new { htmlAttributes = new { @class = "form-control", placeholder = "Quantita" } })
            @Html.ValidationMessageFor(model => model.Quantita, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PrezzoAcquisto, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.PrezzoAcquisto, new { htmlAttributes = new { @class = "form-control", placeholder = "Prezzo d'acquisto" } })
            @Html.ValidationMessageFor(model => model.PrezzoAcquisto, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Aggiungi Fattura" class="btn btn-default" />
        </div>
        @Html.ActionLink("Termina fattura", "Terminafatturaacquisto", "GestoreForniture")
    </div>
</div>
}

